# Pharmacy Scheduling System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=pharmacy
POSTGRES_USER=postgres

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_PORT=3001
FRONTEND_URL=http://localhost:3000

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRY=24h

# =============================================================================
# SMS GATEWAY CONFIGURATION (Capcom6 - Local Server mode over Tailscale)
# =============================================================================
CAPCOM6_API_URL=http://100.126.232.47:8080
CAPCOM6_USERNAME=sms
CAPCOM6_PASSWORD=your_capcom6_password
CAPCOM6_API_KEY=your_capcom6_api_key
CAPCOM6_ACCOUNT_ID=your_capcom6_account_id
CAPCOM6_PHONE_NUMBER=your_capcom6_phone_number

# =============================================================================
# AI INTEGRATION (OpenRouter)
# =============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key

# =============================================================================
# N8N WORKFLOW AUTOMATION
# =============================================================================
N8N_ENCRYPTION_KEY=your_super_secret_n8n_encryption_key_min_32_chars
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_n8n_password

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
CHOKIDAR_USEPOLLING=true
WATCHPACK_POLLING=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# For local dev on host
VITE_BACKEND_URL=http://localhost:3001
VITE_SOCKET_URL=http://localhost:3001
# For mobile/peer access via Tailscale, set to your Tailscale IP
# VITE_BACKEND_URL=http://100.120.219.68:3001
# VITE_SOCKET_URL=http://100.120.219.68:3001
VITE_APP_NAME=Pharmacy Scheduling System
VITE_APP_VERSION=1.0.0

# =============================================================================
# TAILSCALE ACCESS (for mobile/peer access)
# =============================================================================
# If your Docker host is on Tailscale, also set FRONTEND_URL accordingly so CORS allows it
# FRONTEND_URL=http://100.120.219.68:3000

# =============================================================================
# SECURITY NOTES
# =============================================================================
# - Never commit .env files to version control
# - Use strong, unique passwords for production
# - Regularly rotate API keys and secrets
# - Use environment-specific configurations for staging/production
